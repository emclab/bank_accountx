<div id="main_body">
  <h1>Bank Accounts</h1>
  <table>
    <tr>
      <th>CreateDate</th>
      <th>AccountName</th>
      <th>AccountNumber</th>
      <th>BankName</th> 
      <th>Active</th>     
      <th>UpdatedBy</th>
      <th>BriefNote</th>
      <th></th>
    </tr>

    <% @accounts.each do |r| %>
        <tr>
          <td><%= (r.created_at + 8.hours).strftime("%Y/%m/%d")%></td>
          <td><%= r.account_name %></td>
          <td><%= r.account_num %></td>         
          <td><%= r.bank_name %></td>
          <td><%= r.active %></td>
          <td><%= r.last_updated_by.name %></td>
          <td><%= r.brief_note %></td>
          <td><%= link_to 'Edit', edit_account_path(r, :format => :js), :remote => true if has_update_right?('bank_accountx_accounts') %></td>
        </tr>
    <% end %>

  </table>

  <%= link_to 'Back', SUBURI + "/authentify/view_handler?index=0", :id => 'close' %>&nbsp; |&nbsp;
  <%= link_to "New Bank Account", new_account_path(:format => :js), :remote => true, :id => 'new_log_link' if has_create_right?('bank_accountx_accounts') %>

</div>
